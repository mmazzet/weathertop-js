{{> menu}}
<section class="content box mt-5">
  <div class="columns">
    <div class="column is-half">
      <form class="box" action="/profile/update-profile-view/{{member._id}}" method="POST">
        <h3 class="subtitle mt-6">Update Your Profile</h3>
        <div class="field">
          <label class="label">Name</label>
          <input class="input" type="text" placeholder="Enter Name" name="firstName" required>
        </div>
        <div class="field">
          <label class="label">Last Name</label>
          <input class="input" type="text" placeholder="Enter Last Name" name="lastName" required>
        </div>
        <div class="field">
          <label class="label">Password</label>
          <input class="input" type="text" placeholder="Enter Password" name="password" required>
        </div>
        <button class="button is-primary">Update Profile</button>
      </form>
    </div>
    <div class="column is-half">
      <figure class="image is-square">
        <img src="../images/edit-profile-page.jpg">
      </figure>
    </div>
  </div>
</section>