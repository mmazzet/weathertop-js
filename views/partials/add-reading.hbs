<form class="box" action="/station/{{station._id}}/addreading" method="POST">
  <div class="columns">
    <div class="field column">
      <label class="label">Code</label>
      <div class="select is-fullwidth">
        <select name="code">
          <option>Select Code</option>
          <option value="200">200</option>
          <option value="300">300</option>
          <option value="500">500</option>
          <option value="600">600</option>
          <option value="700">700</option>
          <option value="800">800</option>
          <option value="801">801</option>
          <option value="802">802</option>
          <option value="803">803</option>
          <option value="804">804</option>
        </select>
      </div>
    </div>
    <div class="field column">
      <label class="label">Temperature</label>
      <div class="control">
        <input class="input" placeholder="00.0C" type="number" min="-89.2" max="56.7" step="any" name="temperature"
          required>
      </div>
    </div>
    <div class="field column">
      <label class="label">Wind Speed</label>
      <div class="control">
        <input class="input" placeholder="00.00kMh" type="number" min="0" max="117.9" name="windSpeed" required>
      </div>
    </div>
    <div class="field column">
      <label class="label">Wind Direction</label>
      <div class="control">
        <input class="input" placeholder="000deg" type="number" min="0" max="360" name="windDirection" required>
      </div>
    </div>
    <div class="field column">
      <label class="label">Pressure</label>
      <div class="control">
        <input class="input" placeholder="000hPa" type="number" name="pressure" min="946.5" max="1084.8" step="any"
          required>
      </div>
    </div>
  </div>
  <div class="field mt-4">
    <div class="control">
      <button class="button is-info">Add Reading</button>
    </div>
  </div>
</form>