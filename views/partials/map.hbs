<section>
  <div id="map" style="height: 400px;"></div>
  <script>

    const map = L.map('map').setView([52.161435, -7.149295], 5);

    L.tileLayer('https://api.maptiler.com/maps/outdoor-v2/{z}/{x}/{y}.png?key=Q04D4fnUKK7nkBHeVHMH', {
      attribution: '<a href="https://www.maptiler.com/copyright/" target="_blank">&copy; MapTiler</a> <a href="https://www.openstreetmap.org/copyright" target="_blank">&copy; OpenStreetMap contributors</a>',
    }).addTo(map);
  </script>

  {{#each stations}}
  <script>
    let marker{{@index}} = L.marker([{{lat}}, {{lng}}]);
    marker{{@index}}.addTo(map);
    marker{{@index}}.bindPopup("{{name}}");
  </script>
  {{/each}}
</section>

