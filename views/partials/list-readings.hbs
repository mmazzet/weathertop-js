<table class="table is-fullwidth is-bordered">
  <thead>
    <tr class="has-background-info-light">
      <th>Date</th>
      <th>Code</th>
      <th>Temperature</th>
      <th>Wind Speed</th>
      <th>Wind Direction</th>
      <th>Pressure</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
    <tr>
      <td>
        {{date}}
      </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temperature}}
      </td>
      <td>
        {{windSpeed}}
      </td>
      <td>
        {{windDirection}}
      </td>
       <td>
        {{pressure}}
      </td>
       <td>
          <a href="/station/{{../station._id}}/deletereading/{{_id}}" class="button is-danger">
            <i class="fa-regular fa-trash-can text-is-danger"></i>
          </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>